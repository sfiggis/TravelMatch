<h1 id="edit-header"><%= @airport.municipality %></h1>

<%= form_for(@airport, url: airport_path(@airport), action: "put", :html => {:class => 'form', :id => 'edit-form'}) do |f| %>
  <fieldset>
    <%= f.label :content %>
    <%= f.text_area :content %> 
  </fieldset>
    <%= f.fields_for :images do |builder| %>
      <fieldset>
        <%= builder.label :image %>
        <%= builder.hidden_field :image, value: @image.image_data %>
        <%= builder.file_field :image %>
      </fieldset>
  <% end %>
  <fieldset>
    <%= f.submit "Update",:id => 'edit-button', :class => 'button' %>
  </fieldset>
<% end %>